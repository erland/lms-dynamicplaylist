<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<section id="nowplaying">
		<subsection id="dynamicplaylist_mix">
			<name>Playlists:</name>
			<icon>html/images/mixbutton.png</icon>
			<weight>10</weight>
			<command id="songmix">
				<defaultenabled>0</defaultenabled>
				<requireplugins>DynamicPlayList</requireplugins>
				<weight>10</weight>
				<name>Song</name>
				<url>plugins/DynamicPlayList/dynamicplaylist_list.html?playlisttype=track&amp;flatlist=1</url>
				<type>content</type>
				<parameters>
					<id>dynamicplaylist_parameter_1</id>
					<player>player</player>
				</parameters>
			</command>
			<command id="albummix">
				<requireplugins>DynamicPlayList</requireplugins>
				<weight>20</weight>
				<name>Album</name>
				<url>plugins/DynamicPlayList/dynamicplaylist_list.html?playlisttype=album&amp;flatlist=1</url>
				<type>content</type>
				<parameters>
					<album_id>dynamicplaylist_parameter_1</album_id>
					<player>player</player>
				</parameters>
			</command>
			<command id="artistmix">
				<requireplugins>DynamicPlayList</requireplugins>
				<weight>30</weight>
				<name>Artist</name>
				<url>plugins/DynamicPlayList/dynamicplaylist_list.html?playlisttype=artist&amp;flatlist=1</url>
				<type>content</type>
				<parameters>
					<artist_id>dynamicplaylist_parameter_1</artist_id>
					<player>player</player>
				</parameters>
			</command>
			<command id="genremix">
				<requireplugins>DynamicPlayList</requireplugins>
				<weight>40</weight>
				<name>Genre</name>
				<url>plugins/DynamicPlayList/dynamicplaylist_list.html?playlisttype=genre&amp;flatlist=1</url>
				<type>content</type>
				<parameters>
					<genre_id>dynamicplaylist_parameter_1</genre_id>
					<player>player</player>
				</parameters>
			</command>
		</subsection>
	</section>
</configuration>
